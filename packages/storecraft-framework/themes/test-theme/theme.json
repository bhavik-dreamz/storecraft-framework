{
  "name": "Test Theme",
  "version": "1.0.0",
  "description": "Test theme for StoreCraft Framework with all routing functionality",
  "author": "StoreCraft Team",
  "settings": {
    "colors": {
      "primary": "#3B82F6",
      "secondary": "#64748B",
      "accent": "#F59E0B",
      "background": "#FFFFFF",
      "surface": "#F8FAFC",
      "text": "#1F2937",
      "textSecondary": "#6B7280",
      "border": "#E5E7EB",
      "success": "#10B981",
      "warning": "#F59E0B",
      "error": "#EF4444"
    },
    "typography": {
      "fontFamily": {
        "primary": "Inter, system-ui, sans-serif",
        "heading": "Inter, system-ui, sans-serif"
      },
      "fontSize": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "1.875rem",
        "4xl": "2.25rem"
      }
    },
    "layout": {
      "containerMaxWidth": "1200px",
      "headerHeight": "80px",
      "sidebarWidth": "280px",
      "spacing": {
        "xs": "0.25rem",
        "sm": "0.5rem",
        "md": "1rem",
        "lg": "1.5rem",
        "xl": "2rem",
        "2xl": "3rem"
      }
    }
  },
  "routes": {
    "home": "/",
    "products": "/products",
    "productDetail": "/products/[handle]",
    "collections": "/collections",
    "cart": "/cart",
    "account": "/account",
    "login": "/login",
    "admin": "/admin",
    "adminOrderDetail": "/admin/orders/[orderId]"
  },
  "features": {
    "authentication": true,
    "cart": true,
    "adminPanel": true,
    "productReviews": true,
    "wishlist": true,
    "multiCurrency": true,
    "multiLanguage": false,
    "inventory": true,
    "seo": true
  },
  "shopify": {
    "storefrontApi": {
      "version": "2024-01"
    },
    "adminApi": {
      "version": "2024-01"
    }
  }
}